<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_profile"

    tools:context="com.goodsnextdoor.pooja.goodsnextdoor.ProfileActivity"
    android:id="@+id/image"
    android:background="@drawable/yell">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Name"
        android:id="@+id/textView2"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_toEndOf="@+id/byes"
        android:layout_toRightOf="@id/byes"
        android:layout_alignLeft="@+id/name"
        android:layout_alignStart="@+id/name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Do you want to use above information?"
        android:id="@+id/det"
        android:layout_marginTop="86dp"
        android:layout_below="@+id/textView2"
        android:layout_toRightOf="@+id/textView2"
        android:layout_toEndOf="@+id/textView2"
        android:textStyle="bold"
        android:textColor="#070000" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="68dp"
        android:layout_height="67dp"
        android:id="@+id/byes"
        android:onClick="yess"
        android:layout_marginTop="44dp"
        android:background="@drawable/check"
        android:textStyle="bold"
        android:layout_below="@+id/det"
        android:layout_toLeftOf="@+id/bno"
        android:layout_toStartOf="@+id/bno"
        android:layout_marginRight="28dp"
        android:layout_marginEnd="28dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="68dp"
        android:layout_height="67dp"
        android:id="@+id/bno"
        android:onClick="no"
        android:background="@drawable/cross"
        android:textStyle="bold"
        android:layout_alignTop="@+id/byes"
        android:layout_toRightOf="@+id/name"
        android:layout_toEndOf="@+id/name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:layout_above="@+id/det"
        android:layout_centerHorizontal="true"
        android:textStyle="bold" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/button7"
        android:background="@drawable/homepp"
        android:onClick="home"
        android:layout_alignTop="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
