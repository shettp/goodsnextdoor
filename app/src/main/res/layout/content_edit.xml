<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_edit"
    tools:context="com.goodsnextdoor.pooja.goodsnextdoor.EditActivity"
    android:background="@drawable/yell">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/pname"
        android:layout_marginTop="21dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name *"
        android:id="@+id/textView"
        android:layout_alignBaseline="@+id/pname"
        android:layout_alignBottom="@+id/pname"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:textColor="#080000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact *"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/pname"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView7"
        android:textStyle="bold"
        android:textColor="#090000" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pcontact"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignRight="@+id/pname"
        android:layout_alignEnd="@+id/pname"
        android:layout_alignLeft="@+id/pname"
        android:layout_alignStart="@+id/pname"
        android:textStyle="bold" />

    <Button
        android:layout_width="68dp"
        android:layout_height="67dp"
        android:id="@+id/ph"
        android:onClick="takePicture"
        android:layout_marginTop="59dp"
        android:layout_below="@+id/textView7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/camean" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_toRightOf="@+id/ph"
        android:layout_alignRight="@+id/upload"
        android:layout_alignEnd="@+id/upload"
        android:layout_alignTop="@+id/ph"
        android:layout_alignBottom="@+id/ph" />

    <Button
        android:layout_width="68dp"
        android:layout_height="67dp"
        android:id="@+id/upload"
        android:onClick="uploadPhoto"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="112dp"
        android:background="@drawable/cloud" />

    <Button
        android:layout_width="68dp"
        android:layout_height="67dp"
        android:id="@+id/pick"
        android:background="@drawable/gall"
        android:layout_alignTop="@+id/imageView"
        android:layout_toRightOf="@+id/pcontact"
        android:layout_toEndOf="@+id/pcontact" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/home"
        android:background="@drawable/homepp"
        android:onClick="home"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
